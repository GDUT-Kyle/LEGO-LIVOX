<launch>
    <!--- Sim Time -->
    <param name="/use_sim_time" value="true" />
    
    <param name="scan_line" type="int" value="6" />

    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <param name="mapping_skip_frame" type="int" value="2" />

    <!-- remove too closed points -->
    <param name="minimum_range" type="double" value="0.3"/>
    <param name="threshold_flat" type="double" value="0.01"/>
    <param name="threshold_sharp" type="double" value="0.1"/>

    <param name="mapping_line_resolution" type="double" value="0.3"/>
    <param name="mapping_plane_resolution" type="double" value="0.6"/>

    <node pkg="lego_livox" type="livox_repub" name="livox_repub" output="screen" />

    <node pkg="lego_livox" type="imageProjection"    name="imageProjection"    output="screen"/>

    <node pkg="lego_livox" type="featureAssociation" name="featureAssociation" output="screen"/>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lego_livox)/rviz/rviz.rviz" />

    <!--- TF -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 0 0 0 /map    /livox_init 10" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 0 0 0 /laser_odom /livox   10" /> -->

    <!-- <node pkg="loam_horizon" type="scanRegistration" name="scanRegistration" output="screen" >
        <remap from="/livox_undistort" to="/livox_pcl0" />
    </node>

    <node pkg="loam_horizon" type="laserOdometry" name="laserOdometry" output="screen" />

    <node pkg="loam_horizon" type="laserMapping" name="laserMapping" output="screen" />

    <arg name="rviz" default="true" />
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find loam_horizon)/rviz_cfg/loam_horizon.rviz" />
    </group> -->

</launch>
